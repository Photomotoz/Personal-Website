<!DOCTYPE html>
<html>
<head>

  <title>Dmitry Tarasev - Software Engineer</title>
  <%= favicon_link_tag '/favicon.ico' %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= nav_bar :fixed => :top do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <%= menu_item "Photo Gallery", gallery_path %>
        <%= drop_down "Web Zoo" do %>
          <% ["Anatomy", "Dance Party", "Secret Scene", "Special", "Jon's Scene"].each do |item| %>
            <%= menu_item item, zoo_path(:name => item.gsub(" ", "_").gsub("'", "").camelize(:lower)) %>
          <% end %>
        <% end %>
    <% end %>
<% end %>
<%= yield %>



<% (0..VERTICAL_LASER_LINES).each do |i| %>

  <div id= "vert-laser-line-<%="#{i}"%>"></div>

<% end %>

<% (0..HORIZONTAL_LASER_LINES).each do |i| %>

  <div id= "horiz-laser-line-<%="#{i}"%>"></div>

<% end %>

</body>
</html>
